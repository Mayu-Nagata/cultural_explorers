<div class="container">
  <div class="row">
    <div class="mt-3 col-md-4">
      <h2>User profile</h2>
      <%= image_tag @end_user.profile_image, style: "border-radius: 50%; width: 100px; height: 100px; object-fit:cover;" %>
      <table class="table mt-3">
        <tbody>
          <tr>
            <th>Name</th>
            <th><%= @end_user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= @end_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <button type="button" class="btn btn-secondary"><%= link_to end_users_information_edit_path do %>Edit profile<% end %></button>
      <button type="button" class="btn btn-outline-success"><%= link_to new_post_path do %>Share my experience!<% end %></button>
    </div>
    <div class="mt-3 col-md-6 offset-md-1">
      <h2>Posts</h2>
      <table class="table table-hover table-inverse">
        <thread>

        </thread>
        <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%=link_to post_path(post.id) do %><%= image_tag post.get_image(200,300) %><% end %></td>
            <td><%= link_to post_path(post.id) do %><h2><%= post.title %></h2><% end %></td>
            <td>Comment:<%= post.comments.count %></td>
            <td>â™¡<%= post.favorites.count %></td>
          </tr>
        <% end %>


        </tbody>
      </table>
    </div>
  </div>
</div>