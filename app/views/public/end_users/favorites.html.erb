<div class="container">
  <div class="row">
    <%= render'public/end_users/profile', end_user:@end_user %>
    <div class="mt-3 col-md-7 offset-md-1">
      <h2>Favorites</h2>
      <table class="table table-hover table-inverse">
        <thread>

        </thread>
        <tbody>
      <% if @favorite_list.present? %>
        <% @favorite_list.each do |post| %>
          <tr>
            <td><%=link_to post_path(post.id) do %><%= image_tag post.get_image(200,300) %><% end %></td>
            <td>
              <h2>
                <%= link_to post_path(post.id), class:"text-reset" do %>

                  <%= post.title %>

                <% end %>
              </h2>
              <br>
              <%= link_to end_user_path(post.end_user.id), class:"text-reset" do %>
                <%= image_tag post.end_user.profile_image, style: "border-radius: 50%; width: 50px; height: 50px; object-fit:cover;" %>
                <%= post.end_user.name %>
              <% end %>
            </td>
            <td>
              <div class="comment">
                <i class="far fa-comment-dots"></i>
                <%= post.comments.count %>
              </div>
            </td>
            <td id="favorite_buttons_<%= post.id %>">
              <%= render "favorites/favorite", post: post %>
            </td>
          </tr>
        <% end %>
      <% end %>


        </tbody>
      </table>
    </div>
  </div>
</div>