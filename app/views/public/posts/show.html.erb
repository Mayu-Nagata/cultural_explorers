<div class="container">
  <div class="row">
    <div class="mt-3 ml-8">
        <button type="submit" class="btn btn-success"><%= link_to edit_post_path(@post), class:"text-light" do  %><%="Edit" %><% end %></button>
        <button type="submit" class="btn btn-danger"><%= link_to post_path(@post.id), method: :delete, "data-confirm" => "Are you sure you want to delete this post?", class:"text-light" do %><%="Delete" %><% end %></button>
    </div>
    <div class="mt-3 mx-auto">
      <div class="mt-5"><%= image_tag @post.get_image(500,900) %></div>
      <div class="mt-5"><b><%=@post.title %></b></div>
      <div class="mt-5"><%=@post.text %></div>
      <div class="mt-5">
        <p>Comment : <%= @post.comments.count %></p>
        <% @post.comments. each do |comment| %>
          <div><%= image_tag comment.end_user.get_profile_image(100,100) %>ã€€<b><%=link_to end_user_path(comment.end_user.id), class:"text-none" do %><%= comment.end_user.name %><% end %></b> <%= comment.comment %>
          <% if comment.end_user== current_end_user %>
            <button type="submit" class="btn ml-4 btn-danger"><%= link_to post_comment_path(comment.post, comment), method: :delete, "data-confirm" => "Are you sure you want to delete this comment?", class:"text-light" do %>Delete<% end %></button>
          <% end %>
          <br><%= comment.created_at.strftime('%Y/%m/%d') %>

          </div>


        <% end %>
      </div>
      <div class="mt-3 ml-4">
        <%= form_with model: [@post, @comment] do |f| %>
          <%= f.text_area :comment, rows: '3', placeholder: "Write a comment" %>
          <%= f.submit "Post" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
