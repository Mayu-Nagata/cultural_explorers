<table class="mt-3 table table-hover table-inverse">
        <thread>
          <tr></tr>
        </thread>
        <tbody>
          <tr>
            <% posts.each do |post| %>
            <td><%= link_to end_user_path(post.end_user.id) do %><%= image_tag post.get_image(200,300) %><% end %></td>
            <td><%= link_to post_path(post.id), class:"text-reset" do %><h2><%= post.title %></h2><% end %><br>
            <%= link_to end_user_path(post.end_user.id), class:"text-reset" do %><%= image_tag post.end_user.profile_image, style: "border-radius: 50%; width: 50px; height: 50px; object-fit:cover;" %>
            <%= post.end_user.name %><% end %></td>
            <td>
              <div class="comment">
                <i class="far fa-comment-dots"></i>
                <%= post.comments.count %>
              </div>
            </td>
            <td id="favorite_buttons_<%= post.id %>">
              <%= render "favorites/favorite", post: post %>

            </td>

          </tr>
            <% end %>

        </tbody>
      </table>