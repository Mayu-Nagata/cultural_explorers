<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 mx-auto">
      <h2>Share my experiences</h2>
      <%= form_with model: @post, url: posts_path, method: :post do |f| %>
      <label class="mt-3">Image</label><br>
      <%= f.file_field :image, accept: "image/*" %><br>
      <label class="mt-2" >Title</label>
      <%= f.text_field :title, class: 'form-control' %>
      <label class="mt-2">Text</label>
      <%= f.text_area :text, rows: 5, class: 'form-control' %><br>
      <label>Tag</label><br>
      <%= f.text_field :tag, value: @post.tags.pluck(:name), class: 'form-control' %>

      <br><%= f.submit 'Post', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
