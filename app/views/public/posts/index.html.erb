<div class="container">
  <div class="row">
    <div class="mt-3 col-md-6 offset-md-1">
      <h2>Recent posts</h2>
      <table class="mt-3 table table-hover table-inverse">
        <thread>
          <tr></tr>
        </thread>
        <tbody>
          <tr>
            <% @posts.each do |post| %>
            <td><%= link_to end_user_path(post.end_user.id) do %><%= image_tag post.get_image(200,300) %><% end %></td>
            <td><%= link_to post_path(post.id) do %><h2><%= post.title %></h2><% end %><br><%= link_to end_user_path(post.end_user.id) do %><%= image_tag post.end_user.profile_image, style: "border-radius: 50%; width: 50px; height: 50px; object-fit:cover;" %> <%= post.end_user.name %><% end %></td>
            <td>Comment:<%= post.comments.count %></td>
            <td id="favorite_buttons_<%= post.id %>">
              <%= render "favorites/favorite", post: post %>

            </td>

          </tr>
            <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>
