<div class="container">
  <div class="row">
    <div class="mt-3 mx-auto">
      <h2>Recent posts</h2>
      <table class="mt-3 table table-hover table-inverse">
        <thread>
          <tr></tr>
        </thread>
        <tbody>
          <tr>
            <% @posts.each do |post| %>
            <td><%= link_to end_user_path(post.end_user.id) do %><%= image_tag post.end_user.get_profile_image(100,100) %><% end %></td>
            <td><%= link_to post_path(post.id) do %><b><%= post.title %></b><% end %></td>


            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
