<div class="container">
  <div class="row">
    <div class="mt-3 mx-auto">
      <h2>Edit my post</h2>
      <% if @post.errors.any? %>
        <h2><%=@post.errors.count %>errors prohibited this post from being saved:</h2>
          <ul>
            <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>

      <%= form_with model: @post, url: post_path(@post), method: :patch do |f| %>
        <p>Image</p>
        <%= f.file_field :image, accept: "image/*" %>

        <p>Title</p>
        <%= f.text_field :title %>

        <p>Text</p>
        <%= f.text_area :text %><br />

        <label>Tag</label><br>
        <%= f.text_field :tag, value: @post.tags.pluck(:name) %>

        <%= f.submit "Update post", class: "mt-3 btn btn-success" %>

      <% end %>



    </div>
  </div>
</div>