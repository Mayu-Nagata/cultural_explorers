<div class="container">
  <div class="row">
    <div class="mt-3 mx-auto">

      <h2>
        <%= image_tag @end_user.get_profile_image(100,100), style: "border-radius: 50%; width: 100px; height: 100px; object-fit:cover;" %>
        <b><%= @end_user.name %>さんの会員ステータス変更</b>
      </h2>
      <%= form_with model: @end_user, url: admin_end_user_path, method: :patch do |f| %>
      <table class="table table-borderless mt-3">
        <thead>
        </thead>
        <tbody>
          <tr>
            <td></td>
            <th>会員ID</th>
              <td><%= @end_user.id %></td>
          </tr>
            <tr>
              <td></td>
              <th>名前</th>
                <td><%= @end_user.name %></td>
            </tr>
            <tr>
              <td></td>
              <th>メールアドレス</th>
                <td><%= @end_user.email %> </td>
            </tr>
            <tr>
              <td></td>
              <th>紹介文</th>
                <td><%= @end_user.introduction %></td>
            </tr>
            <tr>
              <td></td>
            　<th>会員ステータス</th>
                <td><%= f.radio_button :is_deleted, false %>有効　<%= f.radio_button :is_deleted, true %>利用停止</td>
                <td><%= f.submit "変更を保存", class: "btn btn-success mx-auto" %></td>
            </tr>
        </tbody>
      </table>

　　　<% end %>



