<div class="container">
  <div class="row">
    <div class="mt-3 mx-auto">

      <h2>
        <%= image_tag @end_user.get_profile_image(100,100), style: "border-radius: 50%; width: 100px; height: 100px; object-fit:cover;" %>
        <b><%= @end_user.name %>さんの会員詳細</b>
      </h2>
      <table class="table table-borderless mt-3">
        <thead>
        </thead>
        <tbody>
          <tr>
            <th>会員ID</th>
              <td><%= @end_user.id %></td>
          </tr>
            <tr>
              <th>名前</th>
                <td><%= @end_user.name %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
                <td><%= @end_user.email %> </td>
            </tr>
            <tr>
              <th>紹介文</th>
            <td><%= @end_user.introduction %></td>
            </tr>
            <tr>
            　<th>会員ステータス</th>
            <% if @end_user.is_deleted %>
                <td class="text-secondary"><strong>退会/利用停止</strong></td>
            <% else %>
                <td class="text-success"><strong>有効</strong></td>
            <% end %>

          </tr>
               <td></td>
               <td><%= link_to edit_admin_end_user_path(@end_user.id), class: "btn btn-success ml-2 mt-2" do %>会員ステータスを変更する<% end %></td>

        </tbody>
      </table>
    </div>
  </div>
</div>