<div class="container">
  <div class="row">
    <div class="mt-3 mx-auto">
      <h2><b>投稿一覧</b></h2>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>投稿日時</th>
            <th>投稿者</th>
            <th>タイトル</th>
            <th>コメント数</th>
            <th>いいね数</th>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= post.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
            <td><%= post.end_user.name %></td>
            <td><%= link_to admin_post_path(post.id), class:"text-reset" do %><u><%= post.title %></u><% end %></td>
            <td><%= post.comments.count %></td>
            <td><%= post.favorites.count %></td>
          </tr>
          <% end %>
        </tbody>
          </tr>

      </table>
    </div>
  </div>
</div>
