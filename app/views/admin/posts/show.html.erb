<div class="container">
  <div class="row">
    <div class="mt-3 ml-8">
        <button type="submit" class="btn btn-danger"><%= link_to admin_post_path(@post.id), method: :delete, "data-confirm" => "Are you sure you want to delete this post?", class:"text-light" do %><%="Delete" %><% end %></button>
    </div>
    <div class="mt-3 mx-auto">
      <div class="mt-5"><%= image_tag @post.get_image(500,900) %></div>
      <div class="mt-5"><h2><b><%=@post.title %></b></h2><br><%= image_tag @post.end_user.profile_image, style: "border-radius: 50%; width: 50px; height: 50px; object-fit:cover;" %> <%= @post.end_user.name %></div>
      <div class="mt-5"><%=@post.text %></div>
      <div class="mt-5">
          <p>
          ♡<%= @post.favorites.count %>
          </p>
          <p>Comment : <%= @post.comments.count %></p>
          <% @post.comments. each do |comment| %>
            <div><%= image_tag comment.end_user.get_profile_image(100,100) %>　<b><%=link_to end_user_path(comment.end_user.id), class:"text-none" do %><%= comment.end_user.name %><% end %></b> <%= comment.comment %>
            <button type="submit" class="btn ml-4 btn-danger"><%= link_to admin_post_comment_path(comment.post, comment), method: :delete, "data-confirm" => "Are you sure you want to delete this comment?", class:"text-light" do %>Delete<% end %></button>
            <br><%= comment.created_at.strftime('%Y/%m/%d') %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>

